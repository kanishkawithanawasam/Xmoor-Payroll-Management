@using Xmoor.Main.Areas.Applicant.ViewModels


@model ApplicantDashboardVM
@section CSS{
    <style>
        .mainContainer {
            margin-left: auto !important;
            margin-right: auto !important;
            display: flex;
            width: fit-content;
            margin: 30px;
        }

        .grid {
            display: grid;
            grid-template-columns: 500px 500px;
            column-gap: 60px;
            justify-content: center;
        }

        .itemGroup1_ApplicantView .flexRow {
            display: flex;
            justify-content: space-between;
            box-shadow: 0 0 5px 1px;
            border-radius: 5px;
            padding: 10px;
        }

        .flexRow a {
            padding: 5px 8px;
            background-color: rgb(45, 45, 61);
            color: aliceblue;
            text-decoration: none;
            border-radius: 5px;
            border: 1px solid rgb(45, 45, 61);
            font-size: 1rem;
            font-weight: 600;
        }

        .flexRow a:hover,
        .flexRow a:active {
            background: aliceblue;
            color: rgb(45, 45, 61);
        }

        .flexRow p {
            margin: 0;
            padding: 5px;
        }
    </style>
}

<div class="mainContainer" id="mainContainer">
    @{
        if (Model.RegistrationOpen)
        {
            <div class="grid" style="">
                <!--This grid is used for new Employees-->
                <div style="grid-column: 1/span 2;">
                    <h1 style="margin-bottom: 20px;">Applicant Dashboard</h1>
                    <hr>
                </div>
                <div style="grid-column: 1/span 2;">
                    <h3 style="margin-bottom: 20px;">To-Do Tasks</h3>
                </div>
                <div class="itemGroup1_ApplicantView">
                    <div class="flexRow">
                        <div><p>Register and Confirm Personal Details</p></div>
                        <div><a type="button" asp-area="Applicant" asp-controller="Home" asp-action="RegisterPersonalDetails">GOTO TASK</a></div>
                    </div>
                </div>
                <div class="itemGroup1_ApplicantView">
                    <div class="flexRow">
                        <div><p>Confirm Payroll Details</p> </div>
                        <div><a href="" type="button">GOTO TASK</a></div>
                    </div>
                </div>
            </div>
        }



    }


