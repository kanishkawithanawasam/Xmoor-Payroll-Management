@using Xmoor.Main.Areas.Applicant.ViewModels;
@model ViewApplicationVM

@section CSS {
    <style>
        .appplication {
            margin-left: auto;
            margin-right: auto;
            width: 90%;
            max-width: 1000px;
            margin-top: 20px;
            box-shadow: 0 0 5px 1px;
            border-radius: 5px;
            padding: 20px;
            box-sizing: border-box;
            min-height: 80vh;
            margin-bottom:20px;
        }

        .applicationHeading {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

            .applicationHeading a {
                text-decoration: none;
                color: white;
                background-color: rgb(51, 51, 77);
                padding: 5px 10px;
                border-radius: 5px;
            }


        .keyInfo {
            display: flex;
            justify-content: left;
            margin-bottom: 10px;
            padding:10px;
        }

        .keyInfo div {
            display:flex;
            margin-right: 10px;
            color: white;
            background-color: gray;
            border-radius: 5px;
        }

        .bluePart{
            background: rgb(51, 51, 77) !important;
            padding:0 10px;
        }

    </style>

}


<div class="mainContainer">
    <div class="appplication">
        <h5 style="margin-bottom:0;">Job Post</h5>
        <div class="applicationHeading">
            <h1>@Model.Title</h1>
            <a href="http://">Apply Now</a>
        </div>
        <hr/>
        <div class="keyInfo">
            <div> 
                
                <div class="bluePart">Department</div>
                <div>@Model.DepartmentName</div>
            </div>
            <div>
                <div class="bluePart">Role</div>
                <div>@Model.RoleName</div>
            </div>
            <div>
                <div class="bluePart">Working Hours</div>
                <div>@Model.WorkingHours</div>
            </div>
            <div>
                <div class="bluePart">Application Close</div>
                <div>@Model.CloseDate</div>
            </div>
        </div>
        <hr>
        <h4>Description</h4>
        <div class="description">
            @Model.Description
        </div>

    </div>
</div>